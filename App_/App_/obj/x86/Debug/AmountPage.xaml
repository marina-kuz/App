<Page
    x:Class="App_.AmountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App_"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock Text="Баланс:" HorizontalAlignment="Left" Margin="100,50,0,0" 
                     FontSize="25" TextWrapping="Wrap" VerticalAlignment="Top" MaxHeight="150" />

        <TextBlock Text="$" HorizontalAlignment="Left" Margin="100,100,0,0" 
                     FontSize="25" TextWrapping="Wrap" VerticalAlignment="Top" MaxHeight="150"/>
        
        <TextBlock x:ConnectionId='2' x:Name="amountTB"  HorizontalAlignment="Left" Margin="120,100,0,0" 
                     FontSize="25" TextWrapping="Wrap" VerticalAlignment="Top" MaxWidth="150"/>
        
    </Grid>
</Page>

